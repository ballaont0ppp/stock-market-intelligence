# ============================================
# Stock Portfolio Management Platform
# Environment Configuration Template
# ============================================
# Copy this file to .env and update with your actual values
# NEVER commit .env file to version control!

# ============================================
# Flask Configuration
# ============================================
FLASK_APP=run.py
FLASK_ENV=development  # Options: development, production, testing
SECRET_KEY=your-secret-key-here-change-in-production-REQUIRED

# IMPORTANT: Generate a secure SECRET_KEY for production:
# python -c "import secrets; print(secrets.token_hex(32))"

# ============================================
# Database Configuration
# ============================================
# Format: mysql+pymysql://username:password@host:port/database
DATABASE_URL=mysql+pymysql://root:password@localhost:3306/stock_portfolio

# Production example:
# DATABASE_URL=mysql+pymysql://prod_user:secure_password@db.example.com:3306/stock_portfolio_prod

# ============================================
# Data Mode Configuration
# ============================================
# LIVE: Fetch real-time data from yfinance API
# STATIC: Use local CSV files for testing/simulation
DATA_MODE=LIVE

# Required for STATIC mode - specify simulation date
# SIMULATION_DATE=2024-01-15

# ============================================
# Twitter API Credentials
# ============================================
# Optional - Required for sentiment analysis feature
# Get credentials from: https://developer.twitter.com/
TWITTER_API_KEY=your_api_key_here
TWITTER_API_SECRET=your_api_secret_here
TWITTER_ACCESS_TOKEN=your_access_token_here
TWITTER_ACCESS_SECRET=your_access_secret_here

# ============================================
# Sentiment Analysis Configuration
# ============================================
SENTIMENT_ENABLED=True  # Set to False to disable sentiment analysis
SENTIMENT_CACHE_DURATION=3600  # Cache duration in seconds (1 hour)
SENTIMENT_TWEET_COUNT=100  # Number of tweets to analyze

# ============================================
# Background Jobs Configuration
# ============================================
JOBS_ENABLED=True  # Set to False to disable background jobs (price updates, dividends)

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================
# Production-Only Settings
# ============================================
# Uncomment and configure for production deployment

# Database connection pool settings
# SQLALCHEMY_POOL_SIZE=20
# SQLALCHEMY_MAX_OVERFLOW=10
# SQLALCHEMY_POOL_TIMEOUT=30

# Session security
# SESSION_COOKIE_SECURE=True  # Requires HTTPS
# SESSION_COOKIE_HTTPONLY=True
# SESSION_COOKIE_SAMESITE=Lax

# ============================================
# Optional: Email Configuration (Future)
# ============================================
# MAIL_SERVER=smtp.gmail.com
# MAIL_PORT=587
# MAIL_USE_TLS=True
# MAIL_USERNAME=your_email@gmail.com
# MAIL_PASSWORD=your_app_password

# ============================================
# Optional: Redis Configuration (Future)
# ============================================
# REDIS_URL=redis://localhost:6379/0

# ============================================
# Notes
# ============================================
# 1. Never commit .env file to version control
# 2. Use strong, unique SECRET_KEY in production
# 3. Use secure database passwords
# 4. Keep Twitter API credentials confidential
# 5. Review and update all settings before production deployment
